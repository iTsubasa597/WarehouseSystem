<!DOCTYPE html>
<html>
<link rel="stylesheet" href="/static/css/layui.css">

<body>
    <div class="search">
        供货商名称：
        <div class="layui-inline">
          <input class="layui-input" name="id" id="searchData" autocomplete="off">
        </div>
        <button class="layui-btn" data-type="search">搜索</button>
    </div>

    <table lay-filter="table" id="tableData"></table>    

    <script type="text/html" id="dataTools">
        <a class="layui-btn" lay-event="newOrder">添加新供货商</a>
    </script>

    <script type="text/html" id="tableTools">
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>


    <script src="/static/layui.all.js"></script>
    <script>
        var table = layui.table;
        table.render({
            elem: '#tableData'
            ,url: '/api/v1/supplier' //数据接口
            ,toolbar: '#dataTools'
            ,defaultToolbar: []
            ,cols: [ [ //表头
            {field: 'id', align:'center', title: '供货商编号'}
            ,{field: 'name', align:'center', title: '供货商名称'}
            ,{field: 'phone', align:'center', title: '供货商电话'}
            ,{fixed: 'right', title: '操作', align:'center', toolbar: '#tableTools'}
            ] ]
            ,page: true
        });
        table.on('tool(table)', function(obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
            var data = obj.data; //获得当前行数据
            var Event = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (Event == 'del') {
                layer.confirm('一旦删除无法恢复，真的要这么做吗？', function(index) {
                    layui.$.ajax({
                        url: '/api/v1/supplier/delete',
                        method: 'post',
                        data: obj.data,
                        success: function(res){     
                            if(res.code='0'){     
                                obj.del();  
                                layer.msg('删除成功');
                            }
                        },                           
                        error: function(data) {
                            layer.alert('发生了某些错误');   
                        }             
                    })
                    layer.close(index);
                });
            }
        });
        table.on('toolbar(table)', function(obj) {
            var data = obj.data;
            var Event = obj.event;
            switch (Event) {
                case 'newOrder':
                    layer.open({
                        type: 2,
                        title: '添加订单',
                        shadeClose: true,
                        shade: 0.8,
                        area: ['1200px', '90%'],
                        content: '/main/newSupplier' //iframe的url
                    });
            }
        })
        layui.$('.search .layui-btn').on('click', function(){
            table.reload('tableData', {
                url: '/api/v1/supplier/find',
                where: {"name": layui.$('#searchData').val()}
            });
        });         
    </script>
</body>