<!DOCTYPE html>
<html>
    <head>
        <title>仓库管理系统</title>
        <link rel="stylesheet" href="/static/css/layui.css">
        <style>
        .window{  
            width: 400px;  
            position: absolute;  
            margin-left: -200px;  
            margin-top: -80px;  
            top: 50%;  
            left: 50%;  
            display: block;  
            z-index: 2000;  
            background: #fff;
            padding: 20 0;
        }
        </style>
    </head>
    <body>
        <div class="window">
            <form class="layui-form" method="post" id="login">
                <div class="layui-form-item" style="margin-right: 100px;margin-top: 20px;">
                    <label class="layui-form-label">用户名：</label>
                    <div class="layui-input-block">
                        <input type="text" name="name" required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
                    </div>
                </div>
                  
                <div class="layui-form-item" >
                    <label class="layui-form-label">密&nbsp;&nbsp;&nbsp;&nbsp;码：</label>
                    <div class="layui-input-inline">
                        <input type="password" name="pwd" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                </div>
                  
                <div class="layui-form-item">
                    <div style="text-align: center;">
                        <button class="layui-btn" lay-submit lay-filter="formSubmit">登&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;录</button>
                    </div>
                </div>
            </form>
        </div>
        <script src="/static/layui.all.js"></script>
        <script>
            var form = layui.form;
            var $ = layui.$
            form.on('submit(formSubmit)', function(data){
                $.ajax({
                    url: '/login',
                    method: 'post',
                    data: data.field,
                    success: function(res){     
                        if(res.code=0){       
                            layer.msg('登录成功');
                            window.location.href = '../index'
                        }
                    },                           
                    error: function(data) {
                        layer.msg('账号或密码错误');   
                    }             
                })
                return false
            });
                
        </script>
    </body>
</html>